<Window x:Class="Digital_Signature.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Digital_Signature"
        mc:Ignorable="d"
        Title="Digital Signature" Height="700" Width="890.6"
        Background="OldLace">
    <Grid Margin="0,0,609.4,0.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="626" Margin="10,34,-224.2,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="479" TextChanged="textBox_TextChanged" Background="White" Grid.ColumnSpan="2"/>
        <Label x:Name="lblMessage" Content="Message:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.771,-0.422" Height="26" Width="59"/>
        <TextBox x:Name="tbP" HorizontalAlignment="Left" Height="21" Margin="256.6,165,-582.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Grid.Column="1"/>
        <TextBox x:Name="tbQ" HorizontalAlignment="Left" Height="21" Margin="256.6,215,-582.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Grid.Column="1"/>
        <TextBox x:Name="tbN" HorizontalAlignment="Left" Height="21" Margin="256.6,267,-582.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Grid.Column="1" TextChanged="textBox2_TextChanged"/>
        <TextBox x:Name="tbE" HorizontalAlignment="Left" Height="23" Margin="256.6,312,-582.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Grid.Column="1"/>
        <TextBox x:Name="tbHashHex" HorizontalAlignment="Left" Height="21" Margin="256.6,389,-582.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Grid.Column="1"/>
        <TextBox x:Name="tbHashDecimal" HorizontalAlignment="Left" Height="20" Margin="256.6,438,-582.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Grid.Column="1"/>
        <Button x:Name="btnFile" Content="Browse..." HorizontalAlignment="Left" Margin="256.6,109,-331.6,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="19" Background="Bisque"/>
        <Button x:Name="btnSign" Content="Sign" HorizontalAlignment="Left" Margin="273.6,587,-380.6,0" VerticalAlignment="Top" Width="107" Grid.Column="1" Height="19" Background="Bisque"/>
        <Button x:Name="btnVerify" Content="Verify" HorizontalAlignment="Left" Margin="446.6,587,-551.6,0" VerticalAlignment="Top" Width="105" Grid.Column="1" Height="19" Background="Bisque"/>
        <Label x:Name="lblFile" Content="File:" Grid.Column="1" HorizontalAlignment="Left" Margin="256.6,34,-356.6,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="lblFileName" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="256.6,65,-356.6,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="lblP" Content="P (private key)" Grid.Column="1" HorizontalAlignment="Left" Margin="256.6,143,-356.6,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="lblQ" Content="Q (private key)" Grid.Column="1" HorizontalAlignment="Left" Margin="254.6,191,-354.6,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="lblE" Content="E (public key)" Grid.Column="1" HorizontalAlignment="Left" Margin="256.6,241,-356.6,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="lblN" Content="N (public key)" Grid.Column="1" HorizontalAlignment="Left" Margin="256.6,291,-356.6,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="lblHashHex" Content="Hash (hexadecimal)" Grid.Column="1" HorizontalAlignment="Left" Margin="256.6,363,-380.6,0" VerticalAlignment="Top" Width="124"/>
        <Label x:Name="lblHashDecimal" Content="Hash (decimal)" Grid.Column="1" HorizontalAlignment="Left" Margin="256.6,415,-356.6,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="tbDigitalSignature" Grid.Column="1" HorizontalAlignment="Left" Height="17" Margin="256.6,516,-582.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326"/>
        <Label x:Name="lblDigitalSignature" Content="Digital signature" Grid.Column="1" HorizontalAlignment="Left" Margin="256.6,490,-356.6,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
